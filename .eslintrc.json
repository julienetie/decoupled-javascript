{
    "env": {
        "node": true,
        "mocha": true
    },
    "extends": [
        "standard"
    ],
    "rules": {
        "no-fallthrough": [
            "off"
        ],
        "quotes": [
            2,
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "no-void": "off",
        "no-var": "error",
        "eqeqeq": [
            "error",
            "always"
        ],
        "prefer-arrow-callback": [
            "error",
            {
                "allowNamedFunctions": false,
                "allowUnboundThis": false
            }
        ],
        "func-style": [
            "error",
            "expression"
        ],
        "no-restricted-properties": [
            "error",
            {
                "object": "Object",
                "property": "freeze"
            },
            {
                "object": "Object",
                "property": "seal"
            },
            {
                "object": "this"
            }
        ]
    }
}